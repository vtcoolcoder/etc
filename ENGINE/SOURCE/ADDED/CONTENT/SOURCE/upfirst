#!/usr/bin/bash 

# ******************************************************************************
#                                ОПИСАНИЕ
# ******************************************************************************
#
#     ДЕЛАЕТ ПРОПИСНЫМ ПЕРВЫЙ СИМВОЛ ИМЕНИ ФАЙЛА, ЕСЛИ ОН ЯВЛЯЕТСЯ БУКВОЙ
#
# ******************************************************************************
#                                ИМПОРТ ДВИЖКА
# ******************************************************************************

if [[ -e "$HOME/bin/ENGINE/SOURCE/CORE.SH" ]]; then

    source "$HOME/bin/ENGINE/SOURCE/CORE.SH"
    
else

    echo "Импортируемый файл 'CORE.SH' не найден!" >&2
    exit 1
    
fi

# ******************************************************************************
#                                 АТРИБУТЫ ДВИЖКА
# ******************************************************************************

# Режим работы: не изменять!
executeMode="$TOUPFIRST"

# Флаг отображения доп. сообщений о состоянии
isEnableVerbose="$ON"

# Флаг вкл/откл цветной подсветки сообщений
isEnableColors="$ON"

# ******************************************************************************
#                                 ЗАПУСК ДВИЖКА
# ******************************************************************************

init "$@"

# ******************************************************************************
